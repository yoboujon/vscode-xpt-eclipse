{
  "comments": {
    // In Xpand, no line comment exists
    // "lineComment": "//",
    // Only block comments are allowed in Xpand
    "blockComment": [
      ["<--", "-->"],
      ["«REM»", "«ENDREM»"],
      ["«REM»", "«ENDREM-»"]
    ]
  },
  // symbols used as brackets
  "brackets": [
    ["«", "»"],
    ["«", "-»"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["«", "»"],
    ["«", "-»"]
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    ["«", "»"],
    ["«", "-»"]
  ]
}
